		<!-- OData (odata4j) Stuff: Begin -->
		<dependency>
			<groupId>org.odata4j</groupId>
			<artifactId>odata4j-core</artifactId>
			<version>${odata4j.version}</version>
			<!-- LICENSE: APACHE 2.0 -->
			<exclusions>
