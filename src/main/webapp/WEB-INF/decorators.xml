<decorators defaultdir="/">
  <excludes>
    <pattern>**/ajax/**</pattern>
    <pattern>/css/*</pattern>
    <pattern>/images/*</pattern>
    <pattern>/includes/*</pattern>
    <pattern>/*.html</pattern>
    <pattern>/config-browser/*</pattern>
    <pattern>/services/*</pattern>
  </excludes>
  <decorator name="bootstrapmain" page="layout-bootstrap.dec">
    <pattern>/login*</pattern>
    <pattern>/</pattern>
    <pattern>/document/**</pattern>
  </decorator>
  <decorator name="main" page="layout.dec">
    <pattern>/*</pattern>
  </decorator>
</decorators>

